{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "DatabaseConfig": {
            "properties": {
                "database": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "migrations": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "ssl": {
                    "type": "boolean"
                },
                "type": {
                    "$ref": "#/definitions/DatabaseType"
                },
                "url": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "type": "object"
        },
        "DatabaseType": {
            "enum": [
                "postgres",
                "sqlite"
            ],
            "type": "string"
        }
    },
    "properties": {
        "database": {
            "$ref": "#/definitions/DatabaseConfig"
        },
        "ghost": {
            "description": "Testing comments",
            "properties": {
                "enabled": {
                    "enum": [
                        "$isDevelopment",
                        "$isProduction",
                        false,
                        true
                    ]
                }
            },
            "required": [
                "enabled"
            ],
            "type": "object"
        },
        "httpServer": {
            "properties": {
                "backlog": {
                    "type": "number"
                },
                "bodyLimit": {
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                }
            },
            "required": [
                "backlog",
                "bodyLimit",
                "port"
            ],
            "type": "object"
        }
    },
    "required": [
        "database",
        "ghost",
        "httpServer"
    ],
    "type": "object"
}

