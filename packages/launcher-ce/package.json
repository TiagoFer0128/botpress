{
  "name": "botpress-launcher-ce",
  "version": "1.0.0",
  "description": "Botpress Community Edition (CE) Launcher",
  "main": "build/src/app.js",
  "author": "Botpress, Inc.",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node build/src/index.js",
    "build": "npm run tslint && npm run build-ts && npm run clean-dist && cross-os cbuild",
    "build-ts": "../../node_modules/.bin/tsc",
    "clean-dist": "../../node_modules/.bin/rimraf ./dist",
    "test": "../../node_modules/.bin/jest --forceExit --coverage --verbose -c ../../jest.config.js",
    "watch": "npm run watch-ts",
    "watch-ts": "../../node_modules/.bin/tsc-watch -p .",
    "watch-test": "npm run test -- --watchAll",
    "tslint": "../../node_modules/.bin/tslint -c ../../tslint.json -p tsconfig.json"
  },
  "cross-os": {
    "cbuild": {
      "darwin": "./package-osx.sh"
    }
  },
  "pkg": {
    "assets": [
      "node_modules/vm2/lib/*.js",
      "dist/src/services/action/sandbox-runtime.js"
    ]
  },
  "devDependencies": {
    "cross-os": "^1.3.0",
    "pkg": "^4.3.4",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "botpress-xx": "^1.0.0"
  }
}
