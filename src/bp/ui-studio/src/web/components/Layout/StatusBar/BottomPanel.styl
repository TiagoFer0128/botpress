.container {
  background: black;
  height: calc(100% - 24px) !important;
  width: 100%;
  padding: 10px;
}

.logs {
  list-style-type: none;
  padding-left: 0;
  overflow-y: scroll;
  height: 100%;

  &::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  &::-webkit-scrollbar-track {
    background: #222;
  }

  /* Handle normal */
  &::-webkit-scrollbar-thumb {
    background: #888;
    &:hover {
      background: #555;
    }
  }

  .end {
    margin-top: 5px;
    width: 100%;
    text-align: center;
    color: #888;
    padding-top: 3px;
    border-top: 1px solid #222;
  }

  .entry {
    .level {
      font-weight: bold;
    }

    .message {
      padding-left: 10px;
      opacity: 0.8;
    }

    &:hover .message {
      opacity: 1;
    }

    &.time {
      color: #808080;
    }
    &.level-silly {
      color: #6c6c6c;
    }
    &.level-debug {
      color: #b59fff;
    }
    &.level-verbose {
      color: #a4fffc;
    }
    &.level-info {
      color: #6cbdff;
    }
    &.level-warn {
      color: #fce465;
    }
    &.level-error {
      color: #fe5151;
    }
  }
}
