{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "lib": ["es7"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "outDir": "../out",
    "typeRoots": ["typings", "../node_modules/@types"],
    "types": ["reflect-metadata", "jest", "bluebird-global"]
  },
  "exclude": ["**/*.test.ts", "../out"]
}
