{
  "name": "@botpress/xx-channel-web",
  "version": "0.0.1",
  "author": "Botpress",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/src/server.js",
    "build": "npm run tslint && npm run build-ts && ./scripts/copy-static-files.sh",
    "build-ts": "../../node_modules/.bin/rimraf dist && ../../node_modules/.bin/tsc",
    "build-pkg": "npm run build && npm run pkg",
    "pkg": "../../node_modules/.bin/pkg dist/src/server.js --target macos-x86,macos-x64,linux-x86,linux-x64,win-x86,win-x64 --output bin/botpress-channel-web",
    "test": "../../node_modules/.bin/jest --forceExit --coverage --verbose -c ../../jest.config.js",
    "watch": "npm run watch-ts",
    "watch-ts": "../../node_modules/.bin/rimraf dist && ../../node_modules/.bin/tsc-watch -p . --onSuccess \"node ./dist/src/server.js\" --onFailure \"echo Beep! Compilation Failed\"",
    "watch-node": "../../node_modules/.bin/nodemon dist/src/server.js -w dist",
    "watch-test": "npm run test -- --watchAll",
    "tslint": "../../node_modules/.bin/tslint -c ../../tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "bluebird-global": "^1.0.1",
    "botpress-module-sdk": "^0.0.1",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "inversify": "^4.13.0",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/bluebird-global": "^3.5.6",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "concurrently": "^3.6.0"
  }
}
