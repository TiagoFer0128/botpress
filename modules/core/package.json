{
  "name": "botpress",
  "version": "0.0.0",
  "author": "Botpress",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/src/app.js",
    "build": "npm run build-ts && npm run tslint && ./copyStaticFiles.sh",
    "build-ts": "tsc",
    "build-pkg": "npm run build && npm run pkg",
    "pkg": "pkg dist/src/app.js --target macos-x86,macos-x64,linux-x86,linux-x64,win-x86,win-x64 --output bin/botpress",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -c cyan npm:watch-ts",
    "watch-ts": "tsc-watch -p . --onSuccess \"node ./dist/src/app.js\" --onFailure \"echo Beep! Compilation Failed\"",
    "watch-node": "nodemon dist/src/app.js -w dist",
    "watch-test": "npm run test -- --watchAll",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "bluebird-global": "^1.0.1",
    "botpress-module-sdk": "../../packages/module-sdk",
    "chalk": "^2.4.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "inversify": "^4.13.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.10",
    "lodash-decorators": "^6.0.0",
    "moment": "^2.22.2",
    "ms": "^2.1.1",
    "reflect-metadata": "^0.1.12",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/bluebird-global": "^3.5.6",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.0",
    "@types/knex": "^0.14.17",
    "@types/lodash": "^4.14.112",
    "@types/moment": "^2.13.0",
    "@types/ms": "^0.7.30",
    "@types/node": "^10.5.2",
    "@types/verror": "^1.10.3",
    "concurrently": "^3.6.0",
    "errorhandler": "^1.5.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.2",
    "pkg": "^4.3.3",
    "prettier": "1.13.7",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tsc-watch": "^1.0.26",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
