{
  "name": "botpress",
  "version": "0.0.0",
  "author": "Botpress",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/src/app.js",
    "build": "npm run tslint && npm run build-ts && ./scripts/copy-config.sh",
    "build-ts": "../../node_modules/.bin/rimraf dist && ../../node_modules/.bin/tsc",
    "build-pkg": "npm run build && npm run pkg",
    "pkg": "./scripts/package-binaries.sh",
    "test": "../../node_modules/.bin/jest --forceExit --coverage --verbose -c ../../jest.config.js",
    "watch": "concurrently -c cyan npm:watch-ts",
    "watch-ts": "../../node_modules/.bin/rimraf dist && ../../node_modules/.bin/tsc-watch -p . --onSuccess \"node ./dist/src/app.js\" --onFailure \"echo Beep! Compilation Failed\"",
    "watch-node": "../../node_modules/.bin/nodemon dist/src/app.js -w dist",
    "watch-test": "npm run test -- --watchAll",
    "tslint": "../../node_modules/.bin/tslint -c ../../tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird-global": "^1.0.1",
    "body-parser": "^1.18.3",
    "botpress-module-sdk": "../../packages/module-sdk",
    "chalk": "^2.4.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-http-proxy": "^1.2.0",
    "glob": "^7.1.2",
    "inversify": "^4.13.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.10",
    "lodash-decorators": "^6.0.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "ms": "^2.1.1",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.2",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/bluebird-global": "^3.5.6",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.0",
    "@types/knex": "^0.14.17",
    "@types/lodash": "^4.14.112",
    "@types/moment": "^2.13.0",
    "@types/ms": "^0.7.30",
    "@types/node": "^10.5.2",
    "@types/verror": "^1.10.3",
    "concurrently": "^3.6.0",
    "errorhandler": "^1.5.0"
  }
}
